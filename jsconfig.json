{
    "compilerOptions": {
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es2015",
        "paths": {
            "@": [ "./src/*" ],
            "@utils": [ "./src/utils" ],
            "@commands": [ "./src/commands" ],
            "@extensions": [ "./src/extensions" ],
            "@models": [ "./src/models" ],
        },
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}